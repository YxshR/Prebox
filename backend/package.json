{
  "name": "bulk-email-platform-backend",
  "version": "1.0.0",
  "description": "Backend API services for bulk email platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=\\.service\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$",
    "test:e2e": "jest --testPathPattern=\\.e2e\\.test\\.ts$",
    "test:performance": "jest --testPathPattern=\\.performance\\.test\\.ts$ --runInBand",
    "test:comprehensive": "jest --testPathPattern=comprehensive",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:comprehensive",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:comprehensive-suite": "ts-node src/tests/run-comprehensive-tests.ts",
    "test:multi-step-signup": "ts-node src/auth/test-multi-step-signup.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "seed:demo": "npx ts-node scripts/seed-demo-users.ts",
    "setup:demo": "npx ts-node scripts/create-demo-env.ts",
    "dev:demo": "npm run setup:demo && npx ts-node-dev --respawn --transpile-only src/demo-server.ts",
    "db:init": "node init-auth-database.js",
    "db:migrate": "npx ts-node scripts/run-migrations.ts run",
    "db:migrate:status": "npx ts-node scripts/run-migrations.ts status",
    "db:migrate:rollback": "npx ts-node scripts/run-migrations.ts rollback",
    "db:health": "npx ts-node src/database/health-check.ts",
    "db:setup": "npm run db:init && npm run db:migrate",
    "setup:infrastructure": "npx ts-node src/scripts/setup-infrastructure.ts",
    "validate:env": "npx ts-node src/config/environment-validator.ts",
    "deploy": "npx ts-node scripts/deploy.ts",
    "deploy:production": "NODE_ENV=production npx ts-node scripts/deploy.ts",
    "deploy:staging": "NODE_ENV=staging npx ts-node scripts/deploy.ts"
  },
  "keywords": [
    "email",
    "bulk-email",
    "api",
    "saas"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "auth0": "^4.28.0",
    "aws-sdk": "^2.1489.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openid-connect": "^2.19.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.104.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^2.4.2",
    "razorpay": "^2.9.6",
    "redis": "^4.6.10",
    "stripe": "^14.5.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
