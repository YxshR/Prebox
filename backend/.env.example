



# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bulk_email_platform
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=bulk_email_platform
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Service Provider Configuration
# Amazon SES
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_WEBHOOK_SECRET=your-sendgrid-webhook-secret

# Email Service Configuration
PRIMARY_EMAIL_PROVIDER=amazon-ses
FALLBACK_EMAIL_PROVIDER=sendgrid

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Razorpay (Alternative)
RAZORPAY_KEY_SECRET=your-razorpay-secret-key
RAZORPAY_KEY_ID=your-razorpay-key-id

# AI Service Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_SITE_URL=http://localhost:8000
OPENROUTER_SITE_NAME=Bulk Email Platform
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key
GEMINI_API_KEY=your-gemini-api-key

# Application Configuration
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
ENCRYPTION_KEY=your-256-bit-encryption-key-change-in-production
WEBHOOK_SECRET=your-webhook-signing-secret-change-in-production

# TLS Configuration
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_CA_PATH=./certs/ca.crt

# Security Monitoring
ENABLE_THREAT_DETECTION=true
SECURITY_ALERT_EMAIL=security@yourdomain.com
SECURITY_WEBHOOK_URL=https://your-security-monitoring.com/webhook

# GDPR Compliance
GDPR_DATA_RETENTION_DAYS=2555
GDPR_EXPORT_EXPIRY_DAYS=30
GDPR_DELETION_GRACE_PERIOD_DAYS=30

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=info

# Phone Verification (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SID=your-twilio-api-sid
TWILIO_SERVICE_SID=your-twilio-service-sid
TWILIO_PHONE_NUMBER=+1234567890

# Google OAuth Configuration (Auth0)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback
AUTH0_DOMAIN=your-auth0-domain.auth0.com

# Email Configuration (for verification emails)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_AI_TEMPLATES=true
ENABLE_CUSTOM_DOMAINS=true

# Application URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3002

# Development Database (Docker)
DEV_DATABASE_URL=postgresql://username:password@localhost:5432/bulk_email_platform_dev
DEV_REDIS_URL=redis://redis:6379


