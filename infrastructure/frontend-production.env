# Frontend Production Environment Configuration
# This file contains production-specific environment variables for the frontend

# API Configuration - Production
NEXT_PUBLIC_API_URL=https://api.perbox.com/api
NEXT_PUBLIC_WS_URL=wss://api.perbox.com

# Application URLs - Production
NEXT_PUBLIC_APP_URL=https://perbox.com
NEXT_PUBLIC_ADMIN_URL=https://admin.perbox.com

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.perbox.com
NEXT_PUBLIC_MEDIA_URL=https://media.perbox.com

# Security Configuration
NEXT_PUBLIC_CSP_NONCE=${CSP_NONCE}
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Feature Flags - Production
NEXT_PUBLIC_ENABLE_PHONE_VERIFICATION=true
NEXT_PUBLIC_ENABLE_EMAIL_SIGNUP=false
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_MULTIMEDIA_SHOWCASE=true
NEXT_PUBLIC_ENABLE_PRICING_PROTECTION=true

# Analytics Configuration
NEXT_PUBLIC_GA_TRACKING_ID=${GA_TRACKING_ID}
NEXT_PUBLIC_HOTJAR_ID=${HOTJAR_ID}
NEXT_PUBLIC_MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN}
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Performance Configuration
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_ENABLE_PREFETCH=true
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Social Media Configuration
NEXT_PUBLIC_TWITTER_HANDLE=@perboxplatform
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/perbox
NEXT_PUBLIC_GITHUB_URL=https://github.com/perbox

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@perbox.com
NEXT_PUBLIC_SALES_EMAIL=sales@perbox.com
NEXT_PUBLIC_PHONE_NUMBER=+1-555-PERBOX-1

# Legal URLs
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://perbox.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://perbox.com/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=https://perbox.com/cookies

# Build Configuration
ANALYZE=false
BUNDLE_ANALYZE=false
NODE_ENV=production